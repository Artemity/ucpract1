<Window x:Class="ucpract1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ucpract1"
        mc:Ignorable="d"
        Title="Задание1" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu VerticalAlignment="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Информация" Click="btnInfo_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Агенты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска для агентов -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                        <Label Content="Поиск по фамилии:" VerticalAlignment="Center"/>
                        <TextBox x:Name="tbFind" Width="150" Margin="5,0" 
                                 TextChanged="tbFind_TextChanged" VerticalAlignment="Center"/>
                    </StackPanel>

                    <DataGrid x:Name="DataGrid1" Grid.Row="1" IsReadOnly="True" 
                              AutoGenerateColumns="False" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="30*" Header="ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Width="70*" Header="Фамилия" Binding="{Binding FirstName}"/>
                            <DataGridTextColumn Width="50*" Header="Имя" Binding="{Binding MiddleName}"/>
                            <DataGridTextColumn Width="70*" Header="Отчество" Binding="{Binding LastName}"/>
                            <DataGridTextColumn Width="70*" Header="Комиссия" Binding="{Binding DealShare}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Margin="5" Content="Добавить" Click="btnAdd_Click" Width="100"/>
                        <Button Margin="5" Content="Редактировать" Click="btnEdit_Click" Width="100"/>
                        <Button Margin="5" Content="Удалить" Click="btnDelete_Click" Width="100"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Клиенты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска для клиентов -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                        <Label Content="Поиск по фамилии/тел./email:" VerticalAlignment="Center"/>
                        <TextBox x:Name="tbFind1" Width="150" Margin="5,0" 
                                 TextChanged="tbFind1_TextChanged" VerticalAlignment="Center"/>
                    </StackPanel>

                    <DataGrid x:Name="DataGrid2" Grid.Row="1" IsReadOnly="True" 
                              AutoGenerateColumns="False" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="30*" Header="ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Width="70*" Header="Фамилия" Binding="{Binding FirstName}"/>
                            <DataGridTextColumn Width="50*" Header="Имя" Binding="{Binding MiddleName}"/>
                            <DataGridTextColumn Width="70*" Header="Отчество" Binding="{Binding LastName}"/>
                            <DataGridTextColumn Width="70*" Header="Телефон" Binding="{Binding Phone}"/>
                            <DataGridTextColumn Width="70*" Header="Email" Binding="{Binding Email}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Margin="5" Content="Добавить" Click="btnAdd1_Click" Width="100"/>
                        <Button Margin="5" Content="Редактировать" Click="btnEdit1_Click" Width="100"/>
                        <Button Margin="5" Content="Удалить" Click="btnDelete1_Click" Width="100"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>